@{
    ViewData["Title"] = "ResetPassword";
}
@model ResetPasswordViewModel


@if (TempData["SuccessMessage"] != null)
{
    <div class="row col-5 offset-7 ">
        <div class="alert alert-success alert-dismissible fade show ">
            <strong>İşlem Başarılı!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    </div>
}
<div class="row col-5 offset-7 ">
    <div class="alert alert-danger alert-dismissible fade show " asp-validation-summary="ModelOnly">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
</div>

<section class="" style="background-color: #eee; height:83vh; ">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px; padding:1rem">
                    <div class="card-body p-md-5">

                        <div class="row justify-content-center align-items-center">

                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Yeni Şifre Oluştur</p>


                                <form  method="post" class="mx-1 mx-md-4">


                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="Password" asp-for="Password"></label>
                                            <input type="password" id="Password" class="form-control" asp-for="Password" />
                                            <span class="text-danger" asp-validation-for="Password"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="PasswordConfirm" asp-for="ConfirmPassword"></label>
                                            <input type="password" id="PasswordConfirm" class="form-control" asp-for="ConfirmPassword" />
                                            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                        </div>
                                    </div>



                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-primary btn-lg">Şifreyi Yenile</button>
                                    </div>

                                </form>

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                                <img src="~/images/reset-password.png" class="img-fluid h-75" alt="Sample image" />


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

