@model PasswordChangeViewModel
@{
    ViewData["Title"] = "PasswordChange";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="row col-5 offset-7 ">
        <div class="alert alert-success alert-dismissible fade show ">
            <strong>İşlem Başarılı!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    </div>
}
<div class="row col-5 offset-7 ">
    <div class="alert alert-danger alert-dismissible fade show " asp-validation-summary="ModelOnly">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
</div>
<section style="background-color: #eee;">
    <div class="container py-5">
        <div class="row">
            <div class="col">
                <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="#">Anasayfa</a></li>
                        <li class="breadcrumb-item"><a href="/Member/Index/">Ayarlar</a></li>
                        <li class="breadcrumb-item active" href="/Member/PasswordChange/" aria-current="page">Şifre Değiştir</li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="row">
         
            </div>
            <div class="col-lg-12 ">
            <section class="" style="background-color: #eee; height:83vh; ">
                <div class="container h-100">
                    <div class="row d-flex justify-content-center align-items-center h-100">
                        <div class="col-lg-12 col-xl-11">
                            <div class="card text-black" style="border-radius: 25px; padding:1rem">
                                <div class="card-body p-md-5">

                                    <div class="row justify-content-center align-items-center">
                                        <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-1">
                                            <img src="~/images/Change-password.png" class="img-fluid h-75" alt="Sample image" />


                                        </div>
                                        <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-2">

                                            <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Şifre Değiştir</p>


                                            <form asp-controller="Member" asp-action="PasswordChange" method="post" class="mx-1 mx-md-4">


                                                <div class="d-flex flex-row align-items-center mb-4">
                                                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                                    <div class="form-outline flex-fill mb-0">
                                                        <label class="form-label" for="PasswordOld" asp-for="PasswordOld"></label>
                                                        <input type="password" id="PasswordOld" class="form-control" asp-for="PasswordOld" />
                                                        <span class="text-danger" asp-validation-for="PasswordOld"></span>
                                                    </div>
                                                </div>

                                                <div class="d-flex flex-row align-items-center mb-4">
                                                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                                    <div class="form-outline flex-fill mb-0">
                                                        <label class="form-label" for="PasswordNew" asp-for="PasswordNew"></label>
                                                        <input type="password" id="PasswordNew" class="form-control" asp-for="PasswordNew" />
                                                        <span class="text-danger" asp-validation-for="PasswordNew"></span>
                                                    </div>
                                                </div>
                                                <div class="d-flex flex-row align-items-center mb-4">
                                                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                                    <div class="form-outline flex-fill mb-0">
                                                        <label class="form-label" for="PasswordNewConfirm" asp-for="PasswordNewConfirm"></label>
                                                        <input type="password" id="PasswordNewConfirm" class="form-control" asp-for="PasswordNewConfirm" />
                                                        <span class="text-danger" asp-validation-for="PasswordNewConfirm"></span>
                                                    </div>
                                                </div>


                                                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                                    <button type="submit" class="btn btn-primary btn-lg">Şifreyi Değiştir</button>
                                                </div>

                                            </form>

                                        </div>
                                     
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            </div>
        </div>
    </div>
</section>

